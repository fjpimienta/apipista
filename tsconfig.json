{
  "compilerOptions": {
    "target": "ES2020", // Asegurarse de que el target esté configurado a ES2017 o superior
    "module": "esnext", // Cambiar el módulo a esnext
    "moduleResolution": "node", // Agregar esta línea
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}